page {
  width: 100%;
  height: 100%;
  background-color: #eee;
}

.doc {
  padding: 20px 0;
}

.head, .content {
  background-color: #fff;
  margin: 10px;
  padding: 20px;
  border-radius: 10px;
}

.title {
  font-size: 16px;
  font-weight: bold;
}

.author {
  display: flex;
  margin-top: 5px;
}

.head-img {
  width: 20px;
  height: 20px;
  border-radius: 50%;
}

.name {
  flex: 1;
  align-items: center;
  margin: 0 10px;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.pv {
  margin-right: 10px;
  font-size: 12px;
  color: #888;
}

.create-time, .update-time {
  font-size: 12px;
  color: #888;
}

.content {
  display: block;
  margin-top: 10px;
  font-size: 14px;
  word-wrap: break-word;
  overflow: hidden;
}

.update-time {
  margin-top: 20px;
  text-align: right;
}
