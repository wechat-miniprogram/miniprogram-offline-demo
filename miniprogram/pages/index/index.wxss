page {
  width: 100%;
  height: 100%;
  background-color: #eee;
}

.list {
  padding: 20px 0;
}

.item {
  background-color: #fff;
  margin: 10px;
  padding: 20px;
  border-radius: 10px;
}

.title {
  font-size: 16px;
  font-weight: bold;
}

.info {
  display: flex;
  margin-top: 5px;
  font-size: 12px;
  color: #888;
}

.comment {
  margin-left: 10px;
}

.content {
  display: block;
  margin-top: 10px;
  font-size: 14px;
  word-wrap: break-word;
  overflow: hidden;
}

.time {
  margin-top: 15px;
  text-align: right;
  font-size: 12px;
  color: #888;
}
